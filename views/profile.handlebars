<div class='row'>
  <div class='col-auto'>
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class='profile-container'>
  <div class='create-post'>
    <h3>What's On Your Mind:</h3>

    <form class='form new-project-form'>
      <div class='form-group'>
        <label for='project-name'>Title:</label>
        <input
          class='form-input'
          type='text'
          id='project-name'
          name='project-name'
        />
      </div>
      <div class='form-group'>
        <label for='project-desc'>Body:</label>
        <textarea
          class='form-input'
          id='project-desc'
          name='project-desc'
        ></textarea>
      </div>
      <div class='form-group'>
        <button type='submit' class='btn btn-primary' id="create-btn">Create</button>
      </div>
    </form>
  </div>

  {{#if projects.length}}
    <div class='project-list'>
      <h3>Your Posts:</h3>

      {{#each projects as |project|}}
        <div class='single-post'>
          <div class='col-md-8'>
            <h4 class="project-title"><a href='/project/{{project.id}}'>{{project.name}}</a></h4>
          </div>
          <div class='col-md-4'>
            <button
              class='btn btn-sm btn-danger'
              data-id='{{project.id}}'
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src='./js/profile.js'></script>
